<UserControl x:Class="OchUploader.FrontEnd.WPF.Views.ButtonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="700">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Button Background="Transparent" Margin="5,0,0,20" Width="35" VerticalAlignment="Top" >
            <iconPacks:PackIconModern Kind="ControlPlay"/>
        </Button>
        <Button Background="Transparent" Margin="5,0,0,20" Width="35">
            <iconPacks:PackIconModern Kind="ControlPause"/>
        </Button>
    </StackPanel>
</UserControl>
